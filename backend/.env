# --- 服务器端口 ---
# 后端服务器监听的端口
PORT=3000

# --- 日志配置 ---
# 日志级别 (例如: 'error', 'warn', 'info', 'http', 'verbose', 'debug', 'silly')
LOG_LEVEL=info
# 日志文件存放的目录 (相对于项目根目录)
LOG_DIR=./logs

# --- 文件路径配置 ---
# 本地模式导出 ZIP 前的图片临时存放基本目录
# 建议使用绝对路径或相对于项目根目录的清晰路径
# 例如: LOCAL_EXPORT_BASE_DIR=/var/tmp/md_app_local_exports
# 或 (如果 .env 在项目根目录): LOCAL_EXPORT_BASE_DIR=./temp_local_exports
LOCAL_EXPORT_BASE_DIR=./temp/md_img_export

# Multer 上传的原始 Markdown 文件临时存放目录
# 例如: MULTER_UPLOAD_TEMP_DIR=/var/tmp/md_app_uploads
# 或: MULTER_UPLOAD_TEMP_DIR=./temp_uploads
MULTER_UPLOAD_TEMP_DIR=./temp/md_uploads

# --- 功能配置 ---
# 下载语雀图片之间的延迟时间 (毫秒)
# 设置为 0 可禁用延迟
IMAGE_DOWNLOAD_DELAY_MS=500